<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProPlayerOnlineActivity"
    android:orientation="vertical">

    <com.example.customexoplayer.AndroidPlayer
        android:id="@+id/androidPlayer"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPlayOffline"
        android:text="Play offline"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>
